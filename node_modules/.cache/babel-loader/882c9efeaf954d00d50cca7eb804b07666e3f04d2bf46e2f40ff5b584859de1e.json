{"ast":null,"code":"export default {\n  name: 'NavBar',\n  data() {\n    return {\n      isFixed: false\n    };\n  },\n  mounted() {\n    const items = document.querySelectorAll('.nav-item');\n    items.forEach(item => {\n      item.addEventListener('click', e => {\n        e.preventDefault();\n        this.handleIndicator(e.target);\n      });\n      item.classList.contains('is-active') && this.handleIndicator(item);\n    });\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  beforeDestroy() {\n    window.removeEventListener('scroll', this.handleScroll);\n  },\n  methods: {\n    handleScroll() {\n      const navbar = document.querySelector('.custom-navbar');\n      const navbarHeight = navbar.clientHeight;\n      const offset = window.scrollY;\n      const fourPercent = window.innerHeight * 0.04;\n      this.isFixed = offset > navbarHeight - fourPercent;\n      const homePosition = document.querySelector('#home').offsetTop;\n      const aboutPosition = document.querySelector('#about').offsetTop;\n      const skillsPosition = document.querySelector('#skills').offsetTop;\n      const projectsPosition = document.querySelector('#projects').offsetTop;\n      const contactsPosition = document.querySelector('#contacts').offsetTop;\n      if (offset >= homePosition && offset < aboutPosition) {\n        this.updateIndicator('home', offset - homePosition);\n      } else if (offset >= aboutPosition && offset < skillsPosition) {\n        this.updateIndicator('about', offset - aboutPosition);\n      } else if (offset >= skillsPosition && offset < projectsPosition) {\n        this.updateIndicator('skills', offset - skillsPosition);\n      } else if (offset >= projectsPosition && offset < contactsPosition) {\n        this.updateIndicator('projects', offset - projectsPosition);\n      } else {\n        this.updateIndicator('contacts', offset - contactsPosition);\n      }\n    },\n    updateIndicator(section, offset) {\n      const el = document.querySelector(`[data-target=\"${section}\"]`);\n      if (el) {\n        this.handleIndicator(el, offset);\n      }\n    },\n    handleIndicator(el, offset) {\n      const indicator = document.querySelector('.nav-indicator');\n      const items = document.querySelectorAll('.nav-item');\n      items.forEach(item => {\n        item.classList.remove('is-active');\n        item.removeAttribute('style');\n      });\n      const elementColor = el.dataset.activeColor;\n      indicator.style.width = `${el.offsetWidth}px`;\n      indicator.style.backgroundColor = elementColor;\n      indicator.style.left = `${el.offsetLeft + offset}px`;\n      el.classList.add('is-active');\n      el.style.color = elementColor;\n    }\n  }\n};","map":{"version":3,"names":["name","data","isFixed","mounted","items","document","querySelectorAll","forEach","item","addEventListener","e","preventDefault","handleIndicator","target","classList","contains","window","handleScroll","beforeDestroy","removeEventListener","methods","navbar","querySelector","navbarHeight","clientHeight","offset","scrollY","fourPercent","innerHeight","homePosition","offsetTop","aboutPosition","skillsPosition","projectsPosition","contactsPosition","updateIndicator","section","el","indicator","remove","removeAttribute","elementColor","dataset","activeColor","style","width","offsetWidth","backgroundColor","left","offsetLeft","add","color"],"sources":["src/components/Navbar.vue"],"sourcesContent":["<template>\n  <div>\n    <nav class=\"custom-navbar\" :class=\"{ 'fixed': isFixed }\">\n      <a v-scroll-to=\"'#home'\" class=\"nav-item is-active\" data-active-color=\"#ce0000\" data-target=\"Home\">Home</a>\n      <a v-scroll-to=\"'#about'\" class=\"nav-item\" data-active-color=\"#ff6a00\" data-target=\"About\">About Me</a>\n      <a v-scroll-to=\"'#skills'\" class=\"nav-item\" data-active-color=\"#ffcc00\" data-target=\"Skills\">Skills</a>\n      <a v-scroll-to=\"'#projects'\" class=\"nav-item\" data-active-color=\"#00cc00\" data-target=\"Projects\">Projects</a>\n      <a v-scroll-to=\"'#contacts'\" class=\"nav-item\" data-active-color=\"#0e6aff\" data-target=\"Contact\">Contact</a>\n      <span class=\"nav-indicator\"></span>\n    </nav>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'NavBar',\n  data() {\n    return {\n      isFixed: false,\n    };\n  },\n  mounted() {\n    const items = document.querySelectorAll('.nav-item');\n\n    items.forEach(item => {\n      item.addEventListener('click', e => {\n        e.preventDefault();\n        this.handleIndicator(e.target);\n      });\n      item.classList.contains('is-active') && this.handleIndicator(item);\n    });\n\n    window.addEventListener('scroll', this.handleScroll);\n  },\n  beforeDestroy() {\n    window.removeEventListener('scroll', this.handleScroll);\n  },\n  methods: {\n    handleScroll() {\n      const navbar = document.querySelector('.custom-navbar');\n      const navbarHeight = navbar.clientHeight;\n      const offset = window.scrollY;\n      const fourPercent = window.innerHeight * 0.04;\n      this.isFixed = offset > navbarHeight - fourPercent;\n      const homePosition = document.querySelector('#home').offsetTop;\n      const aboutPosition = document.querySelector('#about').offsetTop;\n      const skillsPosition = document.querySelector('#skills').offsetTop;\n      const projectsPosition = document.querySelector('#projects').offsetTop;\n      const contactsPosition = document.querySelector('#contacts').offsetTop;\n\n      if (offset >= homePosition && offset < aboutPosition) {\n        this.updateIndicator('home', offset - homePosition);\n      } else if (offset >= aboutPosition && offset < skillsPosition) {\n        this.updateIndicator('about', offset - aboutPosition);\n      } else if (offset >= skillsPosition && offset < projectsPosition) {\n        this.updateIndicator('skills', offset - skillsPosition);\n      } else if (offset >= projectsPosition && offset < contactsPosition) {\n        this.updateIndicator('projects', offset - projectsPosition);\n      } else {\n        this.updateIndicator('contacts', offset - contactsPosition);\n      }\n    },\n    updateIndicator(section, offset) {\n      const el = document.querySelector(`[data-target=\"${section}\"]`);\n      if (el) {\n        this.handleIndicator(el, offset);\n      }\n    },\n    handleIndicator(el, offset) {\n      const indicator = document.querySelector('.nav-indicator');\n      const items = document.querySelectorAll('.nav-item');\n\n      items.forEach(item => {\n        item.classList.remove('is-active');\n        item.removeAttribute('style');\n      });\n\n      const elementColor = el.dataset.activeColor;\n\n      indicator.style.width = `${el.offsetWidth}px`;\n      indicator.style.backgroundColor = elementColor;\n      indicator.style.left = `${el.offsetLeft + offset}px`;\n\n      el.classList.add('is-active');\n      el.style.color = elementColor;\n    },\n  },\n};\n</script>\n\n<style scoped>\n.custom-navbar {\n  z-index: 1000;\n  margin: auto;\n  background-color: rgba(255, 255, 255, 1);\n  max-width: 70vw;\n  padding: 0 -10%;\n  border-radius: 5vh;\n  box-shadow: 10px 20px 50px rgba(255, 255, 255, 0.8);\n  display: flex;\n  justify-content: space-around;\n  overflow: hidden;\n  overflow-x: auto;\n  position: relative;\n  text-align: center;\n  align-items: center;\n  transition: top 0.5s ease, background-color 1.5s ease, padding-top 0.5s ease;\n  cursor: pointer;\n}\n\n.fixed {\n  margin: auto;\n  position: fixed;  \n  top: 4%;\n  left: 50%;\n  transform: translate(-50%, 0);\n  width: 100%;\n  background-color: rgba(255, 255, 255, 0.8);\n  transition: top 0.3s ease, background-color 1.5s ease, padding-top 0.3s ease;\n}\n\n.nav-item {\n  color: #83818c;\n  font-family: arial, sans-serif;\n  padding: 3.5vh 1vw;\n  margin: 0 6px;\n  position: relative;\n  font-family: \"Protest Strike\", sans-serif;\n  font-size: 2vw;\n  font-style: normal;\n  text-decoration: none;\n}\n\n.nav-item:before {\n  content: \"\";\n  position: absolute;\n  bottom: -6px;\n  background-color: #dfe2ea;\n  height: 5px;\n  width: 100%;\n  border-radius: 8px 8px 0 0;\n  left: 0;\n  transition: .3s;\n}\n\n.nav-item:not(.is-active):hover:before {\n  bottom: 0;\n}\n\n.nav-item:not(.is-active):hover {\n  color: #333;\n}\n\n.nav-indicator {\n  position: absolute;\n  left: 0;\n  bottom: 0;\n  height: 5px;\n  transition: .4s;\n  border-radius: 8px 8px 0 0;\n}\n\n</style>\n"],"mappings":"AAcA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;IACA;EACA;EACAC,QAAA;IACA,MAAAC,KAAA,GAAAC,QAAA,CAAAC,gBAAA;IAEAF,KAAA,CAAAG,OAAA,CAAAC,IAAA;MACAA,IAAA,CAAAC,gBAAA,UAAAC,CAAA;QACAA,CAAA,CAAAC,cAAA;QACA,KAAAC,eAAA,CAAAF,CAAA,CAAAG,MAAA;MACA;MACAL,IAAA,CAAAM,SAAA,CAAAC,QAAA,sBAAAH,eAAA,CAAAJ,IAAA;IACA;IAEAQ,MAAA,CAAAP,gBAAA,gBAAAQ,YAAA;EACA;EACAC,cAAA;IACAF,MAAA,CAAAG,mBAAA,gBAAAF,YAAA;EACA;EACAG,OAAA;IACAH,aAAA;MACA,MAAAI,MAAA,GAAAhB,QAAA,CAAAiB,aAAA;MACA,MAAAC,YAAA,GAAAF,MAAA,CAAAG,YAAA;MACA,MAAAC,MAAA,GAAAT,MAAA,CAAAU,OAAA;MACA,MAAAC,WAAA,GAAAX,MAAA,CAAAY,WAAA;MACA,KAAA1B,OAAA,GAAAuB,MAAA,GAAAF,YAAA,GAAAI,WAAA;MACA,MAAAE,YAAA,GAAAxB,QAAA,CAAAiB,aAAA,UAAAQ,SAAA;MACA,MAAAC,aAAA,GAAA1B,QAAA,CAAAiB,aAAA,WAAAQ,SAAA;MACA,MAAAE,cAAA,GAAA3B,QAAA,CAAAiB,aAAA,YAAAQ,SAAA;MACA,MAAAG,gBAAA,GAAA5B,QAAA,CAAAiB,aAAA,cAAAQ,SAAA;MACA,MAAAI,gBAAA,GAAA7B,QAAA,CAAAiB,aAAA,cAAAQ,SAAA;MAEA,IAAAL,MAAA,IAAAI,YAAA,IAAAJ,MAAA,GAAAM,aAAA;QACA,KAAAI,eAAA,SAAAV,MAAA,GAAAI,YAAA;MACA,WAAAJ,MAAA,IAAAM,aAAA,IAAAN,MAAA,GAAAO,cAAA;QACA,KAAAG,eAAA,UAAAV,MAAA,GAAAM,aAAA;MACA,WAAAN,MAAA,IAAAO,cAAA,IAAAP,MAAA,GAAAQ,gBAAA;QACA,KAAAE,eAAA,WAAAV,MAAA,GAAAO,cAAA;MACA,WAAAP,MAAA,IAAAQ,gBAAA,IAAAR,MAAA,GAAAS,gBAAA;QACA,KAAAC,eAAA,aAAAV,MAAA,GAAAQ,gBAAA;MACA;QACA,KAAAE,eAAA,aAAAV,MAAA,GAAAS,gBAAA;MACA;IACA;IACAC,gBAAAC,OAAA,EAAAX,MAAA;MACA,MAAAY,EAAA,GAAAhC,QAAA,CAAAiB,aAAA,kBAAAc,OAAA;MACA,IAAAC,EAAA;QACA,KAAAzB,eAAA,CAAAyB,EAAA,EAAAZ,MAAA;MACA;IACA;IACAb,gBAAAyB,EAAA,EAAAZ,MAAA;MACA,MAAAa,SAAA,GAAAjC,QAAA,CAAAiB,aAAA;MACA,MAAAlB,KAAA,GAAAC,QAAA,CAAAC,gBAAA;MAEAF,KAAA,CA